<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

  <Button
      android:id="@+id/returnsettingbutton"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="20dp"
      android:background="@drawable/roundedbutton"
      android:backgroundTint="@color/black"
      android:drawableLeft="@drawable/returnbutton"
      android:drawableTint="@color/white"
      android:paddingBottom="5dp"
      android:paddingLeft="5dp"
      android:paddingRight="8dp"
      android:paddingTop="5dp"
      android:insetTop="0dp"
      android:insetBottom="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"/>

  <TextView
      android:id="@+id/credits"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Credits"
      android:textColor="@color/black"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/naam1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Arco V.: developer"
      android:textSize="25sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/credits" />

  <TextView
      android:id="@+id/naam2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Jarmo B.: developer"
      android:textSize="25sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/naam1" />

  <TextView
      android:id="@+id/naam3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Jorian v/d H.: developer"
      android:textSize="25sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/naam2" />

  <TextView
      android:id="@+id/naam4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="JoÃ«l V.: developer/designer"
      android:textSize="25sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/naam3" />

  <TextView
      android:id="@+id/naam5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Jonathan B.: designer"
      android:textSize="25sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/naam4" />

</androidx.constraintlayout.widget.ConstraintLayout>